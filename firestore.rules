rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEBUGGING: Allow any logged-in user to read/write ANY habit
    // This helps us confirm if the issue is the "userId" check or something else.
    match /habits/{habitId} {
      allow read, write: if request.auth != null;
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
